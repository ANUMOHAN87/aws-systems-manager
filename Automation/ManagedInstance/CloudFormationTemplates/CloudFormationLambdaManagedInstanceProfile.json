{
    "AWSTemplateFormatVersion" : "2010-09-09",
  
    "Description" : "AWS CloudFormation to create a lambda function. The lambda function will create a managed instance profile user for SSM",
  
    "Resources" : { 

        "AutomationCreateRole" : {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "ZipFile" : "{0}"
                },
                "Role": "{{LambdaAssumeRole}}",
                "Timeout": 60,
                "Handler": "index.lambda_handler",
                "Runtime": "python3.6",
                "MemorySize": 128,
                "FunctionName" : "Automation-{{RoleName}}"
            }
        }
    }
}